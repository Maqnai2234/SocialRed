  # Call 'byebug' anywhere in the code to stop execution and get a debugger console
  gem 'shoulda-matchers', '~> 3.1', '>= 3.1.1'
  gem 'rspec-rails', '~> 3.5', '>= 3.5.1'
  gem 'factory_girl_rails', '~> 4.7'
